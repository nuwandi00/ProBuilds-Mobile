<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/medreqeditdelete"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="418dp"
        android:layout_height="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/request_top" />

    <TextView
        android:id="@+id/requestmedcine_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Request Meterials"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="@+id/imageView3"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/medtrack_topic"
        style="@style/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/track"
        android:drawablePadding="6dp"
        android:text="ConstTrack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />


    <TextView
        android:id="@+id/medtrack_slogan"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Request Your Essential Materilas Here!!"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medtrack_topic"
        app:layout_constraintVertical_bias="0.012" />


    <EditText
        android:id="@+id/medname_detdelete"
        style="@style/editText"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/textview_background"
        android:hint="Enter the Medicine Name"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#B1C0B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/medtrack_slogan" />

    <EditText
        android:id="@+id/medcontact_edtdelete"
        style="@style/editText"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_background"
        android:hint="Contact Number"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#B1C0B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medname_detdelete" />

    <EditText
        android:id="@+id/medemail_edtdelete"
        style="@style/editText"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#B1C0B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medcontact_edtdelete" />

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btn_editmed"
        style="@style/blueButtonStyle"
        android:layout_width="176dp"
        android:layout_height="48dp"

        android:layout_marginStart="16dp"
        android:text="Update"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_deletemed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medemail_edtdelete"
        app:layout_constraintVertical_bias="0.283"
        app:spinning_bar_color="@color/white" />

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btn_deletemed"
        style="@style/blueButtonStyle"
        android:layout_width="176dp"
        android:layout_height="48dp"

        android:text="Delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.919"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medemail_edtdelete"
        app:layout_constraintVertical_bias="0.283"
        app:spinning_bar_color="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>