<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/medName"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/fdimageView3"
        android:layout_width="418dp"
        android:layout_height="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/request_top" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="Request Materials"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/fdimageView3"
        app:layout_constraintEnd_toEndOf="@+id/fdimageView3"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="@+id/fdimageView3"
        app:layout_constraintTop_toTopOf="@+id/fdimageView3"
        app:layout_constraintVertical_bias="0.568" />

    <TextView
        android:id="@+id/tvAppName"
        style="@style/h3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/track"
        android:drawablePadding="6dp"
        android:text="ConstTrack"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fdimageView3" />


    <TextView
        android:id="@+id/tvDontHaveAccount"
        style="@style/h2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Request Your Essential Materilas Here!!"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvAppName"
        app:layout_constraintVertical_bias="0.012" />


    <EditText
        android:id="@+id/medname"
        style="@style/editText"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/textview_background"
        android:hint="Enter the Medicine Name"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#B1C0B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDontHaveAccount" />

    <EditText
        android:id="@+id/medcontact"
        style="@style/editText"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_background"
        android:hint="Contact Number"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#B1C0B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medname" />

    <EditText
        android:id="@+id/medemail"
        style="@style/editText"
        android:layout_width="372dp"
        android:layout_height="53dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/textview_background"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textColorHint="#B1C0B4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medcontact" />

    <br.com.simplepass.loadingbutton.customViews.CircularProgressButton
        android:id="@+id/btn_request"
        style="@style/blueButtonStyle"
        android:layout_width="318dp"
        android:layout_height="53dp"

        android:text="Request Meterials"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/medemail"
        app:layout_constraintVertical_bias="0.274"
        app:spinning_bar_color="@color/white" />


</androidx.constraintlayout.widget.ConstraintLayout>